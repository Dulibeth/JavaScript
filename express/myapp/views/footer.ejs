<% if (!cookieEstado) { %>
<div id="cookies">
    <form method="post" action="/">
        <h2>Uso de Cookies</h2>
        <p>Estamos utilizando cookies para mejorar la experiencia de usuario, por favor indique su respuesta.</p>
        <button type="submit" name="cookie" value="true" >Aceptar</button>
        <button id="cancelar" onclick="window.open('https://www.google.com/')">Rechazar</button>
    </form>
</div>
<% } %>

<% if (message) { %>
    <div class="alert alert-primary alert-dismissible" role="alert">
    <div><%- message %></div>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } if (error) { %>
    <div class="alert alert-danger alert-dismissible" role="alert">
    <div><%- error %></div>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>
